1) 
#include<iostream>
int main ()
{
  int i;
  int sum = 0;
  bool repeat = true;
  while (repeat)
{
  for (i = 0; i < 100; i++)
  {
      if(i % 2 == 0)
	    {
	  sum = sum + i;
	     }
      if (i < 10)
	   {
	  std::cout << i<<std::endl;
	    }
     else if(i < 20)
	  {
	  continue;
	    }
   }
   repeat = false;
}
   std::cout<<sum<<std::endl;
   return 0;

}

2)
#include<iostream>
int main ()
{
  int i;
  for (i = 1; i < 100; i++)
  {
     if(i % 3 == 0 && i % 5 == 0)
	    {
	  std::cout << "FizzBuzz";
	  std::cout << std::endl;
	     }
	   else
	   {
      if(i % 3 == 0)
	    {
	  std::cout << "Fizz";
	  std::cout << std::endl;
	     }
	     
       else if(i % 5 == 0)
	    {
	  std::cout << "Buzz";
	  std::cout << std::endl;
	     }
	else
	 {std::cout<<i<<std::endl;}
	   }
   }
   return 0;
}
