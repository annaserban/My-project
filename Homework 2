1) 
#include<iostream>
int main ()
{
  int i;
  int sum = 0;
  bool repeat = true;
  while (repeat)
{
  for (i = 0; i < 100; i++)
  {
      if(i % 2 == 0)
	    {
	  sum = sum + i;
	     }
      if (i < 10)
	   {
	  std::cout << i;
	    }
     else if(i < 20)
	  {
	  std::cout <<"Treci la nr urmator.";
	    }
   }
   repeat = false;
}
   return 0;
}

2)
#include<iostream>
int main ()
{
  int i;
  for (i = 1; i < 100; i++)
  {
      if(i % 3 == 0)
	    {
	  std::cout << "Fizz";
	  std::cout << std::endl;
	     }
       if(i % 5 == 0)
	    {
	  std::cout << "Buzz";
	  std::cout << std::endl;
	     }
       if(i % 3 == 0 && i % 5 == 0)
	    {
	  std::cout << "FizzBuzz";
	  std::cout << std::endl;
	     }
   }
   return 0;
}
