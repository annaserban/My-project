#include<iostream>
int main()
{
int numar1=10, numar2;
std::cout<<"Care este numarul? ";
std::cin>>numar2;
bool repeat = true;
while(repeat)
{
if(numar2<numar1)
{
  std::cout<<"Caut un numar mai mare";
}
 else if(numar2>numar1)
{
   std::cout<<"Caut un numar mai mic";
}
else
{
std::cout<<"Corect!";
}
repeat=false;
}
return 0;
}
